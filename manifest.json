{
  "manifest_version": 3,
  "name": "Zentra - Your mind. Clear again.",
  "version": "1.0.0",
  "description": "Designed for people who think before they scroll. Zentra helps you reclaim your time and attention by blocking distracting websites and providing a focused browsing experience.",
  "content_scripts": [],
  "permissions": ["activeTab", "storage", "tabs", "webNavigation"],
  "host_permissions": [
    "*://*.facebook.com/*",
    "*://*.instagram.com/*",
    "*://*.twitter.com/*",
    "*://*.tiktok.com/*",
    "*://*.youtube.com/*",
    "*://*.reddit.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Zentra - Your mind. Clear again."
  },
  "web_accessible_resources": [
    {
      "resources": ["messages.json"],
      "matches": ["<all_urls>"]
    }
  ]
}
